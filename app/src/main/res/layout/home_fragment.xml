<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:backgroundTint="@color/white"
                android:padding="14sp"
                app:cardCornerRadius="7sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="AgriDDetect"
                        android:textColor="#CE000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\tGet Diagnoses in hand"
                        android:drawableLeft="@drawable/dot"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\tGet Updated with news"
                        android:drawableLeft="@drawable/dot"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        />   <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\tGet Market trends"
                    android:drawableLeft="@drawable/dot"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    />   <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\tGet Complete Guidence"
                    android:drawableLeft="@drawable/dot"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:backgroundTint="@color/white"
                android:padding="14sp"
                app:cardCornerRadius="7sp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Disease Diagnoses"
                        android:textColor="#CE000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10sp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="7sp"
                                android:src="@drawable/camera" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="Upload Picture" />
                        </LinearLayout>
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textStyle="bold"
android:drawableLeft="@drawable/read_more"
                             android:textSize="20sp"
                             android:layout_gravity="center_vertical"
                             />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10sp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="7sp"
                                android:src="@drawable/check" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="identify" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
android:drawableLeft="@drawable/read_more"

                            android:textSize="20sp"
                            android:layout_gravity="center_vertical"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10sp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="7sp"
                                android:src="@drawable/treatment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:text="Treatment" />
                        </LinearLayout>

                    </LinearLayout>




                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="30sp"
                        android:id="@+id/upload_picture"
                        android:text="Get Started"
                        android:layout_marginBottom="20sp"
                        />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:backgroundTint="@color/white"
                android:padding="14sp"
                app:cardCornerRadius="7sp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Weather Forecast"
                            android:textColor="#CE000000"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:id="@+id/refresh_temp"
                            android:drawableLeft="@drawable/refresh"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="#CE000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginHorizontal="10sp"
                        android:layout_marginTop="2sp"
                        android:background="#6A000000" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/tempreature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="33.5 °C"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:id="@+id/weather"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginBottom="10sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Partially Cloudy"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:backgroundTint="@color/white"
                android:padding="14sp"
                app:cardCornerRadius="7sp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Today's Feed"
                        android:textColor="#CE000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/today_feed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:gravity="left"
                            android:padding="3sp"
                            android:text="Rice Crops suppling is expected to be cultivated till may and transfered to field within 40 days after cultivation date"
                            android:textColor="#BA000000"
                            android:textSize="13sp"
                            android:textStyle="italic" />
                    </RelativeLayout>




                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:backgroundTint="@color/white"
                android:padding="14sp"
                app:cardCornerRadius="7sp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Market Trends"
                        android:textColor="#CE000000"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/market_trends"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:gravity="left"
                            android:padding="3sp"
                            android:text="Average selling Rate Rs.2200 is announced for wheat crops\n
average 40x40 kg yield is expected in result"
                            android:textColor="#BA000000"
                            android:textSize="13sp"
                            android:textStyle="italic" />
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>